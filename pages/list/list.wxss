/* list.wxss */
page {
  background: #FAFAFA
}

.container {
  display: block;
  padding: 0rpx;
}

.section {
  display: flex;
  flex-direction: column;
  margin: 20rpx 10rpx 20rpx 10rpx;
}

.bus-num {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  height: 60rpx;
  display: flex;
  background: #F5F5F5;
  box-shadow: 3rpx 0rpx 8rpx 0rpx #e0e0e0;
}

.bus-num-text {
  margin: auto 40rpx;
  font-size: 30rpx;
  color: #212121;
}

.bus-info {
  background: white;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  box-shadow: 0rpx 3rpx 8rpx -2rpx #BDBDBD;
}

.bus-info-text {
  margin: auto;
}
