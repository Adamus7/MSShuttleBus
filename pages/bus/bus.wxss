page {
  background: #fafafa;
}

.container {
  display: block;
  padding: 0rpx;
}

.bus-title {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  height: 150rpx;
  margin: 20rpx 10rpx 20rpx 10rpx;
  background: #CFD8DC;
  box-shadow: 0rpx 3rpx 8rpx -2rpx #BDBDBD;
}

.bus-tile-text{
  padding: 50rpx;
  margin: auto 10rpx;
}


.bus-time{
  display: flex;
  flex-direction: column;
  margin: 20rpx 10rpx 20rpx 10rpx;
  box-shadow: 0rpx 3rpx 8rpx -2rpx #BDBDBD;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.bus-start-destination{
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background: #F5F5F5;
  height: 100rpx;
}

.fex-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bus-start-destination-text{
  margin: auto 40rpx;
}
.bus-stop{
  background: white;
  height: 80rpx;
}
.bus-stop-text{
  margin: auto 40rpx;
  font-size: 30rpx;
}
