page {
  background: #fafafa;
}

.container {
  display: block;
  padding: 0rpx;
}

.bus-title {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  height: 150rpx;
  margin: 20rpx 10rpx 20rpx 10rpx;
  background: #BDBDBD;
  box-shadow: 0rpx 3rpx 8rpx -2rpx #BDBDBD;
  color: white;
}

.bus-tile-text{
  padding: 50rpx;
  margin: auto 10rpx;
}

.bus-time{
  display: flex;
  flex-direction: column;
  margin: 20rpx 10rpx 20rpx 10rpx;
  box-shadow: 0rpx 3rpx 8rpx -2rpx #BDBDBD;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.bus-time-rt{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0rpx 0rpx 0rpx;
  box-shadow: 0rpx 3rpx 8rpx -2rpx #BDBDBD;
}

.bus-start-destination-up{
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background: #04a5f0;
  height: 100rpx;
  color: white;
}
.bus-start-destination-down{
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background: #ffba07;
  color: white;
  height: 100rpx;
}

.fex-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bus-start-destination-text{
  margin: auto 30rpx;
}
.bus-stop{
  font-size: 30rpx;
  margin: 20rpx 30rpx 20rpx 30rpx;
}
