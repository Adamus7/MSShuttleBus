<!--bus-rt.wxml-->
<view class="container">
  <view class="bus-title">
    <view class="bus-tile-text">RT {{targetBus.id}}</view>
  </view>

  <view class="bus-time">
    <view class="bus-start-destination-up fex-row">
      <view class="bus-start-destination-text">{{targetBus.start}}</view>
      <view class="bus-start-destination-text">{{targetBus.destination}}</view>
    </view>
    <view wx:for="{{targetBus.ups}}" wx:for-index="idx" wx:for-item="lineItem" class="bus-stop-container">
      <view wx:for="{{lineItem}}" wx:for-index="idx" wx:for-item="upstopItem" id="{{idx}}" class="bus-stop fex-row">
        <view>{{upstopItem.name}}</view>
        <view>{{upstopItem.time}}</view>
      </view>
    </view>
  </view>

  <view class="bus-time">
    <view class="bus-start-destination-down fex-row">
      <view class="bus-start-destination-text">{{targetBus.destination}}</view>
      <view class="bus-start-destination-text">{{targetBus.start}}</view>
    </view>
    <view wx:for="{{targetBus.downs}}" wx:for-index="idx" wx:for-item="lineItem" class="bus-stop-container">
      <view wx:for="{{lineItem}}" wx:for-index="idx" wx:for-item="downstopItem" id="{{idx}}" class="bus-stop fex-row">
        <view>{{downstopItem.name}}</view>
        <view>{{downstopItem.time}}</view>
      </view>
    </view>
  </view>
</view>